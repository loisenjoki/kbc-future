        <activity android:name="loise.kbc.ui.activity.KBCTv" >
        </activity>
        <activity android:name="loise.kbc.ui.activity.Video" >
        </activity>
        <activity
            android:name="loise.kbc.ui.activity.MainActivity"
            android:label="@string/app_name"
