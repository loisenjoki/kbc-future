    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="loise.liveo.ui.activity.TwitterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >
        <activity
            android:name="loise.kbc.ui.activity.SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="loise.liveo.ui.activity.TimelineKbc"
            android:label="@string/title_activity_timeline_kbc" >
        </activity>
        <activity
            android:name="loise.kbc.ui.activity.MoreNews"
            android:label="@string/title_activity_more_news" >
        </activity>
        <activity
            android:name="loise.kbc.ui.activity.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="loise.kbc.ui.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="loise.kbc.ui.activity.MainActivity" >
            </meta-data>
        </activity>
        <activity
            android:name="loise.kbc.ui.activity.MainActivityRadio"
            android:label="Radio" >
